{
  "manifest_version": 2,

  "name": "CEXChat++",
  "description": "Adds extra features to CEX.io chat.",
  "version": "0.1.2",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "http://cex.io/*",
    "https://cex.io/*"
  ],
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://cex.io/*",
        "https://cex.io/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "jquery-1.10.2.min.js",
        "underscore-1.5.2.min.js",
        "contentscript.js"
      ]
    }
  ]
}
