{
  "manifest_version": 2,

  "name": "CEXChat++",
  "description": "Adds extra features to CEX.io chat.",
  "version": "0.2.0",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "storage",
    "http://cex.io/*",
    "https://cex.io/*"
  ],
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://cex.io/*",
        "https://cex.io/*"
      ],
      "css": [
        "css/chat.css"
      ],
      "js": [
        "vendor/js/jquery-2.1.0.min.js",
        "vendor/js/underscore-1.6.0.min.js",
        "vendor/js/bootstrap-3.1.1.min.js",
        "js/utils.js",
        "js/emitter.js",
        "js/message.js",
        "js/messageinput.js",
        "js/settings/base.js",
        "js/settings/chrome.js",
        "js/settings/firefox.js",
        "js/userlist.js",
        "js/controllers/chat.js",
        "js/mains/chat.js"
      ]
    }
  ]
}
